{
  "manifest_version": 2,
  "name": "CrowdFilter",
  "version": "2.2.0",
  "description": "__MSG_extensiondescription__",
  "author": "@bitkeks",
  "homepage_url": "https://crowdfilter.inf.tu-dresden.de",
  "icons": {
    "48": "icons/logo.svg"
  },

  "applications": {
    "gecko": {
      "id": "webextension@crowdfilter.bitkeks.eu",
      "strict_min_version": "57.0",
      "update_url": "https://crowdfilter.inf.tu-dresden.de/addon/updates.json"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "browser_action": {
    "default_title": "CrowdFilter",
    "default_icon": "icons/logo.svg",
    "browser_style": true
  },

  "options_ui": {
    "page":"infopage/index.html",
    "open_in_tab": true,
    "browser_style": true
  },

  "default_locale": "en"
}
