{
  "manifest_version": 2,
  "name": "CrowdFilter",
  "version": "0.1.0",
  "description": "__MSG_extensiondescription__",
  "author": "Dominik Pataky",
  "homepage_url": "https://bitkeks.eu/crowdfilter",
  "icons": {
    "48": "icons/logo.svg"
  },

  "page_action": {
    "default_title": "CrowdFilter",
    "default_icon": "icons/logo.svg"
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57"
    }
  },

  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "activeTab",
    "http://localhost/*",
    "https://github.com/*",
    "https://www.heise.de/forum/*",
    "https://twitter.com/*"
  ],

  "background": {
    "scripts": [
      "js/background/ajax_detector.js",
      "js/background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*",
        "https://www.heise.de/forum/*/News-Kommentare/*",
        "https://twitter.com/*"
      ],
      "js": ["js/cf-injection.js"],
      "css": ["cf-style.css"],
      "run_at": "document_end"
    }
  ],

  "web_accessible_resources": [
      "icons/logo_16.png"
  ],

  "default_locale": "en"
}
