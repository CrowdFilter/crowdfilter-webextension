{
  "manifest_version": 2,
  "name": "CrowdFilter",
  "version": "0.3.1",
  "description": "__MSG_extensiondescription__",
  "author": "@bitkeks",
  "homepage_url": "https://crowdfilter.bitkeks.eu",
  "icons": {
    "48": "icons/logo.svg"
  },

  "page_action": {
    "default_title": "CrowdFilter",
    "default_icon": "icons/logo.svg",
    "browser_style": true
  },

  "applications": {
    "gecko": {
      "id": "webextension@crowdfilter.bitkeks.eu",
      "strict_min_version": "57.0",
      "update_url": "https://crowdfilter.bitkeks.eu/addon/updates.json"
    }
  },

  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "https://crowdfilter.bitkeks.eu/*",
    "http://5yxnb2zpucxtxbls.onion/*",
    "https://github.com/*",
    "https://www.heise.de/forum/*",
    "https://twitter.com/*"
  ],

  "background": {
    "scripts": [
      "js/background/ajax_detector.js",
      "js/background/background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "https://github.com/*/*",
        "https://www.heise.de/forum/*/News-Kommentare/*",
        "https://twitter.com/*"
      ],
      "js": ["js/cf-injection.js"],
      "css": ["cf-style.css"],
      "run_at": "document_end"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "web_accessible_resources": [
      "icons/logo_16.png"
  ],

  "default_locale": "en"
}
