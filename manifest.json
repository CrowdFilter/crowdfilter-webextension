{
  "manifest_version": 2,
  "name": "CrowdFilter",
  "version": "0.5.0",
  "description": "__MSG_extensiondescription__",
  "author": "@bitkeks",
  "homepage_url": "https://crowdfilter.bitkeks.eu",
  "icons": {
    "48": "icons/logo.svg"
  },

  "browser_action": {
    "default_title": "CrowdFilter",
    "default_icon": "icons/logo.svg",
    "browser_style": true
  },

  "applications": {
    "gecko": {
      "id": "webextension@crowdfilter.bitkeks.eu",
      "strict_min_version": "57.0",
      "update_url": "https://crowdfilter.bitkeks.eu/addon/updates.json"
    }
  },

  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "https://crowdfilter.bitkeks.eu/*",
    "http://5yxnb2zpucxtxbls.onion/*"
  ],

  "background": {
    "scripts": [
      "js/background/background.js"
    ]
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "web_accessible_resources": [
      "icons/logo_16.png"
  ],

  "default_locale": "en"
}
