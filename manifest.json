{
  "manifest_version": 2,
  "name": "CrowdFilter",
  "version": "0.1.0",
  "description": "__MSG_description__",
  "author": "Dominik Pataky",
  "icons": {
    "48": "icons/logo.svg"
  },

  "browser_action": {
    "default_title": "CrowdFilter",
    "browser_style": true,
    "default_icon": {
      "19": "icons/logo.svg",
      "38": "icons/logo.svg",
      "128": "icons/logo.svg"
    }
  },

  "applications": {
    "gecko": {
      "strict_min_version": "57"
    }
  },

  "permissions": [
    "proxy",
    "storage",
    "tabs",
    "webRequest",
    "https://github.com/*"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/issues/*"],
      "js": ["jquery-3.2.1.slim.min.js", "injector.js"],
      "css": ["style.css"]
    }
  ],

  "default_locale": "en"
}
